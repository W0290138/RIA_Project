body {
    font-family: 'Roboto';
}

table {
    width: 800px;
    border-collapse: collapse;
    color: #6D326D;
}

.header-table {
    background-color: #6D326D;
    color: white;
    font-weight: normal;
}

h1 {
    padding: 30px;
    text-align: center;
}

td,
th {
    padding: 5px;
    box-sizing: border-box;
    border: 1px solid;
}

th {
    border-color: transparent;
}

td {
    border-color: 6D326D;
}

table .button {
    text-align: center;
}

.button i,
table .type i {
    padding: 5px;
    border-radius: 3px;
    background-color: #6D326D;
    color: white;
    border: 1px solid #6D326D;
    box-sizing: border-box;
    font-size: 24px;
    width: 40px;
    height: 40px;
    line-height: 30px;
    text-align: center;
}

.button i:hover,
table .checkbox.unchecked i:hover {
    cursor: pointer;
}

.button i:hover {
    background-color: white;
    color: #6D326D;
}

table .checkbox.unchecked i {
    color: transparent;
    background-color: white;
}

.uploader-container {
    display: inline-block;
    position: absolute;
    left: 50%;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
}

.scroll-box {
    width: 830px;
    height: 400px;
    overflow-y: auto;
    position: relative;
}

td:nth-of-type(1),
th:nth-of-type(1),
td:nth-of-type(5),
th:nth-of-type(5),
td:nth-of-type(6),
th:nth-of-type(6) {
    width: 50px;
}

td:nth-of-type(3),
th:nth-of-type(3),
td:nth-of-type(4),
th:nth-of-type(4) {
    width: 200px;
}

td:nth-of-type(2),
td:nth-of-type(3),
td:nth-of-type(4) {
    padding-left: 10px;
}

table .type i {
    margin-right: 5px;
    vertical-align: middle;
}

.uploader-border {
    width: calc(100% - 30px);
    height: 100%;
    border: 1px solid #6d326d;
    top: 0;
    left: 0;
    position: absolute;
    box-sizing: border-box;
    z-index: -1;
}

table input[type="text"] {
    width: 100%;
    display: block;
    margin: -5px;
    font-family: "Roboto";
    font-size: 16px;
    color: #6d326d;
    border: 1px solid #ac93ac;
    padding: 2px;
}

#uploader-form {
    width: calc(100% - 30px);
    height: 100%;
}

.group-buttons {
    position: absolute;
    width: calc(100% - 30px);
    margin-top: 10px;
}

.group-buttons .button {
    margin-right: 20px;
    display: inline-block;
}

.group-buttons i {
    width: 70px;
}

#upload-file {
    position: fixed;
    top: -1000px;
}


